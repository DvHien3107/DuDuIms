@model EnrichcousBackOffice.Areas.Page.Models.Customize.Ticket.SelectTypeModel

@{
    Layout = "~/Areas/Page/Views/Shared/_TicketLayout.cshtml";
    ViewBag.Title = "Create Ticket | IMS System";
}


    @Html.Action("TicketProgress", new { step = EnrichcousBackOffice.Areas.Page.Models.Customize.Ticket.TicketProgressStep.Type })
    <div class="page-body">

        @using (Html.BeginForm("SelectType", "Ticket", FormMethod.Post, new { @class = "form" }))
        {
            @Html.AntiForgeryToken()
        <div class="box  box-custom">
            <div class="box-header with-border">
                <h3 class="box-title">Select Type Ticket</h3>
            </div>

            <div class="box-body">
                <div class="row">
                    <div class="col-sm-4">

                        <div class="form-group">
                       
                            @Html.DropDownListFor(m => m.Type, Model.TypeList, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Type)

                        </div>

                    </div>
                </div>
                <div>
                    @Html.ValidationMessage("error-summary", new { @class = "validation-summary" })
                </div>
            </div>
        </div>
                

                    <div class="box">
                        <div class="box-body">

                            <a href="/quick-ticket?update=true" class="btn btn-previous btn-custom">Previous</a>
                            <button type="submit" class="btn btn-next btn-custom">Next</button>
                        </div>
                    </div>
                    }



                </div>
            


            @section scripts{

            }

