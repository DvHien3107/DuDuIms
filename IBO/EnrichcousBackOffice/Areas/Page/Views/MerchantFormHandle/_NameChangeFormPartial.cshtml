<!--Start name change form partial-->
@model FormModel.NameChangeForm_Data
@using EnrichcousBackOffice.Areas.Page.Models.Customize;

@{
    var data = Session["NameChangeFormData"] as FormModel.BankChangeForm_Data;
}


@if (ViewBag.Error != null)
{
    <p class="text-center"><b>@ViewBag.Error</b></p>
}
else
{
    <div class="container" style="padding:50px">
        <form id="NameChangeForm" action="/Page/MerchantFormHandle/ChangeData_NCF">
            <div class="row">
                <h1 style="font-weight: 900; text-align:center">Modification Request Form</h1>
                <h1 style="font-weight: 900; text-align:center">Merchant’s <i>Doing Business As</i> (“DBA”) Name </h1><br />
                <div class="personal col-md-12">
                    <div>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <span class="input-group-text">Merchant ID#:</span>
                            </div>
                            <input type="text" class="form-control" name="MerchantID" value="@(Model?.MerchantID)" onblur="changeData()">
                        </div>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <span class="input-group-text">I, (name of business owner) </span>
                            </div>
                            <input type="text" class="form-control" name="OwnerName" value="@(Model?.OwnerName)" onblur="changeData()">
                            <div class="input-group-addon">
                                <span class="input-group-text">,</span>
                            </div>
                        </div>
                        <p>authorize the modification of my business name to the “New DBA” as indicated below.</p>
                        <p><i>* Please note: The name indicated above must be that of the business owner. If there is a change in ownership, please contact customer service.</i></p>
                    </div>
                </div>
                <div class="banking col-md-12">
                    <h3>Current DBA Information</h3>
                    <div>
                        <div class="col-md-12 col-xs-12" style="padding-left: 0;">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <span class="input-group-text">Current DBA name:</span>
                                </div>
                                <input type="text" class="form-control" name="CurrentDBAname" value="@(Model?.CurrentDBAname)" onblur="changeData()">
                            </div>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <span class="input-group-text">Current Legal Name:</span>
                                </div>
                                <input type="text" class="form-control" name="CurrentLegalName" value="@(Model?.CurrentLegalName)" onblur="changeData()">
                            </div>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <span class="input-group-text">Owner Name:</span>
                                </div>
                                <input type="text" class="form-control" name="OwnerName" value="@(Model?.OwnerName)" onblur="changeData()">
                            </div>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <span class="input-group-text">Federal Tax ID:</span>
                                </div>
                                <input type="text" class="form-control" name="FederalTaxID" value="@(Model?.FederalTaxID)" onblur="changeData()">
                            </div>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <span class="input-group-text">Complete Address:</span>
                                </div>
                                <input type="text" class="form-control" name="CompleteAddress" value="@(Model?.CompleteAddress)" onblur="changeData()">
                            </div>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <span class="input-group-text">Contact Phone:</span>
                                </div>
                                <input type="text" class="form-control"  name="ContactPhone" value="@(Model?.ContactPhone)" onblur="changeData()">
                            </div>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <span class="input-group-text">Contact e-mail:</span>
                                </div>
                                <input type="text" class="form-control"  name="ContactEmail" value="@(Model?.ContactEmail)" onblur="changeData()">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="banking col-md-12">
                    <h3>New DBA Information</h3>
                    <div>
                        <div class="col-md-12 col-xs-12" style="padding-left: 0;">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <span class="input-group-text">New DBA name:</span>
                                </div>
                                <input type="text" class="form-control"  name="NewDBAname" value="@(Model?.NewDBAname)" onblur="changeData()">
                            </div>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <span class="input-group-text">Complete Address:</span>
                                </div>
                                <input type="text" class="form-control"  name="NewCompleteAddress" value="@(Model?.NewCompleteAddress)" onblur="changeData()">
                            </div>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <span class="input-group-text">Contact Phone:</span>
                                </div>
                                <input type="text" class="form-control"  name="NewContactPhone" value="@(Model?.NewContactPhone)" onblur="changeData()">
                            </div>

                        </div>
                    </div>
                    <div class="input-group">
                        <div class="input-group-addon" style="padding-left:0">
                            <span class="input-group-text">Signature of business owner:</span>
                        </div>
                        <input type="text" class="form-control" disabled>
                    </div><br />
                    <p>Please return the completed form to us via e-mail or fax at your earliest convenience. </p>
                    <div style="font-size: 22px">
                        <div style="width:100px; float:left"><b>E-Mail: </b></div>
                        <a style="float:left" href="mailto:profilechange@merchant-support.com" target="_blank">profilechange@merchant-support.com</a>
                    </div><br style="clear:both" />
                    <div style="font-size: 22px"><div style="width:100px; float:left"><b>Fax:</b></div> 1-866-693-2941</div>

                </div>
            </div>
            <span style="float: right; margin-top: 50px;">DBAchange-NTC-EN-052013</span>
        </form>
    </div>

    <style type="text/css">
        .h1, h1 {
            font-size: 25px;
        }

        .h2, h2 {
            font-size: 23px;
        }

        .h3, h3 {
            font-size: 20px;
        }

        .h1, .h2, .h3, h1, h2, h3 {
            font-weight: bold;
            color: #4c4c4e;
        }

        .container h3 {
            text-decoration: underline;
        }

        ul {
            list-style-type: none;
        }

        p {
            font-size: 16px;
            word-spacing: 4px;
        }

        .input-group-addon {
            padding: 6px 5px;
            font-size: 16px;
            word-spacing: 4px;
            font-weight: 400;
            line-height: 1;
            color: #333;
            text-align: center;
            background-color: transparent;
            border: none;
        }

        .form-control, .form-control-date {
            font-family: inherit;
            width: 100%;
            border: 0;
            border-bottom: 1px solid #505050;
            outline: 0;
            font-size: 16px;
            word-spacing: 4px;
            padding: 7px 0 2px 0;
            background: transparent;
            border-radius: 0px;
            box-shadow: none;
            height: 25px;
            font-weight: bold;
        }

            .form-control:focus {
                border-bottom: 1px solid #505050;
                outline: 0;
                box-shadow: none;
            }

        .form-control-date {
            width: 10%;
        }

        .form-control[disabled] {
            background-color: transparent;
        }

        .input-group {
            padding-bottom: 10px;
        }

        @@media (max-width: 900px) {
            .h1, h1 {
                font-size: 20px;
                margin-bottom: 5px;
                padding-left: 15px;
                padding-right: 15px;
            }

            .h2, h2 {
                font-size: 20px;
                margin-top: 0;
                padding-left: 15px;
                padding-right: 15px;
            }

            .h3, h3 {
                font-size: 18px;
            }
        }

        .form-control[disabled], fieldset[disabled] .form-control {
            cursor: DEFAULT;
        }
    </style>

}

<script type="text/javascript">

    function changeData() {
        $("#NameChangeForm").submit();
    }

    $("#NameChangeForm").submit(function (e) {
        e.preventDefault(); //avoid to execute the actual submit of the form.
        var form = $(this);
        var url = form.attr('action');

        $.ajax({
            type: "POST",
            url: url,
            data: form.serialize(), //serializes the form's elements.
            success: function (data) {
                //alert(data); // show response from the php script.
            }
        });
    });

</script>
<!--End name change form partial-->
