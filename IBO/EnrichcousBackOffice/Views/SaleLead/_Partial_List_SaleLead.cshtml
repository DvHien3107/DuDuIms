        color: darkgoldenrod;
    }

    .lead_status li.disabled {
        background-color: #eee;
        cursor: not-allowed;
    }

        .lead_status li.disabled > a {
            pointer-events: none;
        }
    .dropdown-toggle {
        transition: all .1s linear;
    }

        .dropdown-toggle:focus, .dropdown-toggle:hover {
