
@{
    ViewBag.Title = "Update Spa/Salon Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using EnrichcousBackOffice.Models
@{   
    List<Ad_USAState> State = ViewBag.State ?? new List<Ad_USAState>();

}
<style>
    *,
    .row,
    div,
    p {
        margin: 0;
        padding: 0;
    }

    body,
    html {
        width: 100%;
        height: 100%;
        position: relative;
        background-color: #03bed5;
        font-family: "Montserrat";
        font-weight: 400;
    }

    .master-wrapper-page {
        width: 100%;
        min-height: 100vh;
        display: -webkit-box;
        display: -webkit-flex;
        display: -moz-box;
        display: -ms-flexbox;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        background-size: cover;
        background-attachment: fixed;
        height: 100%;
        background-position: center;
    }

    .form-register-wrapper {
        position: relative;
        -webkit-box-shadow: 10px 6px 25px -13px rgba(0,0,0,0.75);
        -moz-box-shadow: 10px 6px 25px -13px rgba(0,0,0,0.75);
        box-shadow: 10px 6px 25px -13px rgba(0,0,0,0.75);
        min-width: 300px;
        max-width: 1200px;
        position: relative;
        border-radius: 6px;
        border-left: 1px solid #69d8e6;
        border-top: 1px solid white;
    }

    .logo img {
        width: 60%;
    }

    .list-icon {
        list-style: none;
        margin-bottom: 0;
    }

    .header {
        justify-content: space-between;
        align-items: center;
        background-image: linear-gradient(to right, #03bed5, #04d4ec);
        padding: 15px 30px
    }

    .list-icon li {
        width: 8px;
        margin-bottom: 6px;
        height: 8px;
        border-radius: 50%;
        background-color: white;
    }

    .form-content {
        background-color: white;
        border-radius: 0px 0px 8px 8px;
    }

    .form-group {
        margin-bottom: 0px;
        padding-bottom: 15px;
    }


    .title-1,
    .title-2 {
        font-size: 20px;
        padding: 17px 0px;
        color: #606161;
        font-weight: 500;
    }

    .input-field {
        outline: none;
        border: none;
        padding-left: 0px;
        padding-bottom: 0px;
        border-bottom: 1px solid #d7d7de;
        border-radius: 0;
    }

    .label-field {
        color: #bcbcbd;
        position: absolute;
        color: #bcbcbd;
        top: 7px;
        left: 0;
        font-size: 14px;
        transition: .2s;
    }

    .mdc-text-field {
        position: relative;
    }

    .form-control:focus {
        border: none;
        border-bottom: 1px solid #03c8e0;
        outline: 0;
        box-shadow: unset;
    }

    .input-field:focus ~ label,
    .input-field:valid ~ label {
        top: -10px;
        font-size: 11px;
    }



    .button-submit {
        background-color: #F99D20;
        color: white;
        cursor: pointer;
        border: none;
        outline: none;
        padding: 8px 40px;
        font-weight: 600;
        text-transform: uppercase;
        border-radius: 20px;
        bottom: 0;
    }
        .button-submit:hover {
            opacity: 0.8;
        }

        .button-submit span {
            transform: translateY(2px);
            display: inline-block;
        }

        .button-submit:focus, input, label {
            outline: none;
        }

    .circle-1 {
        position: absolute;
        width: 15%;
        padding-bottom: 15%;
        top: -7%;
        right: 30%;
        z-index: 3;
        -webkit-filter: blur(3px);
        background-color: #b2e1e65c;
        border-radius: 50%;
    }

    .circle-2 {
        position: absolute;
        border-radius: 50%;
        padding-bottom: 30%;
        width: 30%;
        /* padding-bottom: 50%; */
        bottom: -18%;
        left: 20%;
        overflow: hidden;
        z-index: 3;
        -webkit-filter: blur(3px);
        background-color: #b2e1e65c;
        border-radius: 50%;
    }
    .col-style-1 {
        border-right: 1px solid #e3e3e8;
        padding: 30px;
    }

    .col-style-2 {
        border-left: 1px solid #e3e3e8;
        padding: 30px;
    }
    @@media all and (max-width: 769px) {
        .form-register-wrapper {
            margin: 1rem;
            min-width: 400px;
        }
        .col-style-1{
            padding-bottom:0px !important;
        }
        .col-style-2 {
           
            padding-top: 0px;
        }
        .label-wrap{
            height:53px;
        }
    }

    @@media all and (max-width: 481px) {
        .circle-2 {
            display: none;
        }

        .form-register-wrapper {
            margin: 1rem;
            min-width: 300px;
        }

        .title-1, .title-2 {
            font-size: 17px;
        }

        .title-register {
            font-size: 25px;
        }
    }
    

    .islabel {
        pointer-events: none;
    }

    .title-info-salon {
        font-size: 20px;
        padding: 17px 0px;
        color: #606161;
        font-weight: 400;
    }

    .groups-checkradio {
        padding: 10px;
        color: #bcbcbd;
        font-size: 14px;
    }

    .label-custom {
        outline: none;
        border: none;
        padding-left: 0px;
        padding-bottom: 0px;
        border-bottom: 1px solid #d7d7de;
        border-radius: 0;
    }
  /*  custom select2*/
    .select2 {
        z-index:99;
        border: none;
        width: 100% !important;
        border-bottom: 1px solid #d7d7de;
    }
    .select2-container--default .select2-selection--single{
        background-color:transparent;
    }
    .select2 * {
        outline: none;
        font-size: 14px;
    }
    .select2-results__option {
      
        font-size: 14px;
    }
    .select2-container--default .select2-results__option--highlighted[aria-selected] {
        background-color: #03c5dc;
    }
    .select2-dropdown {
        border: 1px solid #e3e3e8;
    }
        .select2-container--default .select2-search--dropdown .select2-search__field {
        border: 1px solid #e3e3e8;
    }
    .select2-container--default .select2-selection--single{
        border:none;
    }
    .select2-container .select2-selection--single .select2-selection__rendered{
        padding-left:0px;
    }
    .no-select {
        -webkit-touch-callout: none;
        -webkit-user-select: none;
        -khtml-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
    }
</style>
<div class="master-wrapper-page">
    <div class="form-register-wrapper">
        <form method="post" id="update-info" action="/register/updateinfostore" style="position: relative;z-index: 4;">
            @Html.AntiForgeryToken()
            <input type="hidden" name="key" value="@ViewBag.Key" />
            <div class="header d-flex">
                <div class="logo">
                    <img src="/images/logo.png" />
                </div>
                <div class="icon-bar">
                    <ul class="list-icon">
                        <li></li>
                        <li></li>
                        <li></li>
                    </ul>
                </div>
            </div>
            <div class="form-content">
                <div class="row">
                    <div class="col-sm-6 col-style-1">
                        <div class="title-info-salon">
                            Spa/Salon information
                        </div>
                        <div class="form-group mdc-text-field">
                            <input type="text" id="SalonName" class="form-control input-field"
                                   name="SalonName" required="required" autocomplete="">
                            <label class="label-field" for="SalonName">Salon/Spa Name</label>

                        </div>
                        <div class="form-group mdc-text-field">
                            <input type="text" tabindex="-1" class="form-control label-custom islabel">
                            <label class="label-field">Salon Address</label>

                        </div>
                        <div style="margin-left: 40px;" class="form-group mdc-text-field">
                            <input type="text" id="Street" class="form-control input-field" name="Address" required="required" autocomplete="">
                            <label class="label-field" for="Address">Street</label>
                        </div>
                        <div style="margin-left: 40px;" class="form-group mdc-text-field">

                            <input type="text" id="City" class="form-control input-field" name="City" required="required" autocomplete="">
                            <label class="label-field" for="City">City/Town</label>
                        </div>
                        <div style="margin-left: 40px;" class="form-group mdc-text-field">
                            <select id="State" data-placeholder="" class="form-control input-field select2" name="State" required="required" autocomplete="">
                                <option></option>
                                @foreach (var item in State)
                                {
                                    <option value="@item.abbreviation"> @item.name</option>
                                }
                            </select>
                            <label class="label-field" for="State">State/Province</label>
                        </div>
                        <div style="margin-left: 40px;" class="form-group mdc-text-field">
                            <input type="text" id="ZipCode" class="form-control input-field" pattern="[0-9]+" name="ZipCode" required="required" autocomplete="">
                            <label class="label-field" for="ZipCode">Zip Code</label>
                        </div>
                        <div class="form-group mdc-text-field">
                            <input type="number" id="NumberBranches" class="form-control input-field"   name="MoreInfo.NumberBranches" required="required" autocomplete="">
                            <label class="label-field" for="NumberBranches">Number Of Branches</label>

                        </div>
                        <div class="form-group mdc-text-field">
                            <input type="number" id="NumberEmployees" class="form-control input-field"  name="MoreInfo.NumberEmployees" required="required" autocomplete="">
                            <label class="label-field" for="NumberEmployees">Number Of Employees</label>

                        </div>
                    </div>
                    <div class="col-sm-6 col-style-2">
                        <div class="title-info-salon">
                            <span>
                                Choose an experience package
                            </span><br>
                                   <span>
                                       MANGO will recommend the appropriate Service Pack based on your answer
                                   </span>
                        </div>
                        <div class="form-group mdc-text-field">
                            <input type="text" tabindex="-1" class="form-control label-custom islabel label-wrap">
                            <label class="label-field">
                                You are or are already using management software
                            </label>
                            <div class="groups-checkradio">
                                <div class="form-check-inline">
                                    <label class="label-radio  no-select">
                                        <input type="radio" class="input-radio" name="MoreInfo.AreUsingSoftware" value="Yes">&nbsp;&nbsp;Yes
                                    </label>
                                </div>
                                <div class="form-check-inline">
                                    <label class="label-radio  no-select">
                                        <input type="radio" class="input-radio" name="MoreInfo.AreUsingSoftware" value="No">&nbsp;&nbsp;No
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group mdc-text-field">
                            <input type="text" tabindex="-1" class="form-control label-custom islabel">
                            <label class="label-field">Hardware</label>
                            <div class="groups-checkradio">
                                <div class="form-check-inline">
                                    <label class="label-radio no-select">
                                        <input type="radio" class="input-radio " name="MoreInfo.Hardware" value="Self-supply">&nbsp;&nbsp;
                                        Self-supply
                                    </label>
                                </div>
                                <div class="form-check-inline">
                                    <label class="label-radio no-select">
                                        <input type="radio" class="input-radio" name="MoreInfo.Hardware" value="MANGO offers">&nbsp;&nbsp;
                                        MANGO offers
                                    </label>
                                </div>
                            </div>
                        </div>
                        @*<div class="form-group mdc-text-field">
                            <input type="text" id="ServicePackage" class="form-control input-field"
                                   name="ServicePackage" required="required" autocomplete="">
                            <label class="label-field" for="ServicePackage">Gói dịch vụ</label>
                        </div>*@
                        <div class="button-content text-center" style="margin:1rem">
                            <button class="button-submit" type="submit"><span>CONFIRM</span><i class="fa fa-spinner fa-spin fa-fw loading" style="display: none;margin-left: 8px; "></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <div class="circle-1">

        </div>
        <div class="circle-2">

        </div>
    </div>
</div>
@section scripts{
    <script>
        $("#update-info").submit(function (e) {
            $('.loading').show();
            e.preventDefault(); // avoid to execute the actual submit of the form.
            var form = $(this);
            var url = form.attr('action');
            $.ajax({
                type: "POST",
                url: url,
                data: form.serialize(), // serializes the form's elements.
                success: function (data) {
                    if (data[0]) {
                        window.location = '/thanks';
                    }
                    else {
                        warning(data[1]);
                        $('.loading').hide();
                    }
                }
            });
        });
    </script>
    
    } 